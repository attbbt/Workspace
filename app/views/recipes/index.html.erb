<%= render 'shared/page_title', title: "Recipes" %>

<%= will_paginate %>

<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <div class="chef_info center">
        <% if recipe.chef.picture? %>
          <%= link_to image_tag(recipe.chef.picture.url, size:"120", class: 'gravatar'), chef_path(recipe.chef) %>
        <% else %>
          <%= link_to image_tag('missing.png', size:"120", class: 'gravatar'), chef_path(recipe.chef) %>
        <% end %>
        <h5>Chef Name: <%= recipe.chef.name %></h5>
      </div>
    </div>

    <div class="col-lg-6 left well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>
      <div class="pull-right">
        <%= link_to like_recipe_path(recipe, like:true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp; <%= recipe.thumbs_up_total %>
        <% end %> &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to like_recipe_path(recipe, like:false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp; <%= recipe.thumbs_down_total %>
        <% end %>
      </div>
      <p>
        <span class="quite">
          <small> created: <%= time_ago_in_words(recipe.created_at) %> ago</small>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small> updated: <%= time_ago_in_words(recipe.updated_at) %> ago</small>
        </span>
      </p>
    </div>
    <div class="col-md-4">
      <%= link_to image_tag(recipe.picture.url, size:"250x150", class: 'gravatar'), recipe_path(recipe) if recipe.picture? %>
    </div>
  </div>
  <hr/>
<% end %>

<%= will_paginate %>