<%= render 'shared/page_title', title: "Recipes" %>
<hr/>
<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <div class="chef_info center">
        <%= gravatar_for recipe.chef, size: 100 %>
        <h5>Chef Name: <%= recipe.chef.name %></h5>
      </div>
    </div>

    <div class="col-lg-6 well left">
      <h4><%= link_to recipe.name, recipe_path(recipe.id) %></h4>
      <p><%= recipe.summary %></p>
      <p>
        <span class="quite">
          <small> <%= time_ago_in_words(recipe.created_at) %> ago</small>
        </span>
      </p>
    </div>
    <div class="col-md-4">
      <%= image_tag(recipe.picture.url, size:"250x150", class: 'gravatar') if recipe.picture? %>
    </div>
  </div>
  <hr/>
<% end %>
