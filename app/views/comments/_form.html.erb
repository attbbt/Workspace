<%= render 'shared/errors', obj: @comment %>

<div class="row">
  <div class="well col-md-4 col-md-offset-4 left">
    <%= form_for ([@recipe, @comment]) do |f| %>
      <div id="form-gap">
        <div id="star-rating"></div>
      </div>
      <div id="form-gap">
        <%= f.label :content %>
        <%= f.text_area :content, autofocus: true %>
      </div>

      <%= f.submit(@comment.new_record? ? "Post comment" : "Update comment", class: 'btn btn-success', id: 'button') %>
      <%= link_to 'Back', :back, class: 'btn btn-success', id: 'button' %>

    <% end %>
  </div>
</div>
<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'comment[rating]'
  });
</script>