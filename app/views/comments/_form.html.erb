<%= render 'shared/errors', obj: @comment %>

<%= render 'shared/page_title', title: "Add comment to "+ @recipe.name + " by " + @recipe.chef.name %>

<div class="row">
  <div class="well col-md-4 col-md-offset-4 left">
    <%= form_for ([@recipe, @comment]) do |f| %>
      <div id="form-gap">
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>

      <%= f.submit "Post Comment", class: 'btn btn-success', id: 'button' %>
      <%= link_to 'Back', :back, class: 'btn btn-success', id: 'button' %>

    <%end %>
  </div>
</div>
